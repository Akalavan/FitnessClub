<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.StackedAreaChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.controllers.chart.ChartsController">
    <children>
        <StackedAreaChart fx:id="stkChart">
            <xAxis>
                <NumberAxis side="BOTTOM"/>
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT"/>
            </yAxis>
        </StackedAreaChart>
        <Button fx:id="btnClear" mnemonicParsing="false" onAction="#actionClear" text="Сброс">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0"/>
            </VBox.margin>
        </Button>
    </children>
</VBox>
